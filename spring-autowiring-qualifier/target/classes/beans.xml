<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="humanHeart" class="com.lex.practice.Heart">
        <property name="nameOfAnimal" value="Human"/>
        <property name="noOfHeart" value="1"/>
    </bean>
    <bean id="copyHeart" class="com.lex.practice.Heart">
        <property name="nameOfAnimal" value="Octopus"/>
        <property name="noOfHeart" value="3"/>
    </bean>

    <bean id="octopusHeart" class="com.lex.practice.Heart">
        <constructor-arg index="0" value="Octopus"/>
        <constructor-arg index="1" value="3"/>
    </bean>

    <bean id="human" class="com.lex.practice.Human">
        <!--        <property name="heart" ref="heartObject"/>-->
        <!--        <constructor-arg type="com.lex.practice.Heart" ref="heartObject"/>-->
    </bean>

</beans>